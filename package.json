{
  "name": "webhook-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "install:backend": "cd backend && npm install --legacy-peer-deps",
    "install:frontend": "cd frontend && npm install --legacy-peer-deps",
    "install:all": "npm run install:backend && npm run install:frontend",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm start",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "start:backend": "cd backend && npm start",
    "vercel-build": "npm run build:backend && npm run build:frontend && cp -r frontend/dist/webhook-frontend/* public/"
  }
}
